<Window x:Class="NoiseMaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoiseMaker"
        mc:Ignorable="d"
        Title="Noise Maker" Width="300" Height="400">
    <Window.Resources>
        <local:Noise x:Key="ViewModel" />
    </Window.Resources>

    <StackPanel DataContext="{StaticResource ViewModel}" Margin="10">
        <Label FontWeight="Bold">Random Seed:</Label>
        <DockPanel Margin="0,0,0,10">
            <TextBox
                    Name="tbRandomSeed"
                    Text="{Binding RandomSeed}"
                    DockPanel.Dock="Right" Width="60" Margin="10,0,0,0"/>
            <Slider
                    Name="sliderRandomSeed"
                    Value="{Binding RandomSeed}"
                    Minimum="0" Maximum="65535"/>
        </DockPanel>

        <Image Name="imNoise" Width="256" Height="256" Margin="0,0,0,10"></Image>

        <Button Name="btnSave" Click="btnSave_Click">Save</Button>
    </StackPanel>
</Window>
